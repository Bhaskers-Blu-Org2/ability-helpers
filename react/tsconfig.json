{
    "compilerOptions": {
        "declaration": true,
        "noResolve": false,
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/",
        "jsx": "react",
        "lib": [
            "es5",
            "es2015.iterable",
            "dom"
        ]
    },

    "include": [
        "./src/**/*"
    ],

    "exclude": [
        "dist",
        "node_modules"
    ]
}
